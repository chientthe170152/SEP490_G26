<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Frontend</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Frontend.styles.css" asp-append-version="true" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Frontend</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1" id="main-nav">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Trang chủ</a>
                        </li>
                        <li class="nav-item role-dependent role-teacher role-student d-none">
                            <a class="nav-link text-dark" href="/Course/CourseList">Khóa học</a>
                        </li>
                        <li class="nav-item role-dependent role-teacher d-none">
                            <a class="nav-link text-dark" href="/ExamBlueprint">Ma trận đề</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav" id="auth-nav">
                        <li class="nav-item auth-guest">
                            <a class="nav-link text-dark" href="/Auth/Login">Đăng nhập</a>
                        </li>
                        <li class="nav-item auth-user d-none dropdown">
                            <a class="nav-link text-dark dropdown-toggle" href="#" id="navbarUserDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Tài khoản
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarUserDropdown">
                                <li><a class="dropdown-item" href="javascript:void(0)" onclick="logout()">Đăng xuất</a></li>
                            </ul>
                        </li>
                        <li class="nav-item role-teacher role-dependent">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Exam" asp-action="AssignExam">Assign Exam</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2026 - Frontend - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        $(document).ready(function() {
            if (isAuthenticated()) {
                $('.auth-guest').addClass('d-none');
                $('.auth-user').removeClass('d-none');
                
                const role = getUserRole();
                if (role === 'Student' || role === 'Học sinh') {
                    $('.role-student').removeClass('d-none');
                } else if (role === 'Teacher' || role === 'Giáo viên') {
                    $('.role-teacher').removeClass('d-none');
                }
            } else {
                $('.auth-guest').removeClass('d-none');
                $('.auth-user').addClass('d-none');
            }
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
