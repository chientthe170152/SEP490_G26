
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Hoàn tất đăng ký - Math Test Creator</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/Auth/google-register.css" asp-append-version="true" />
</head>
<body>
    <div class="register-container">
        <h2 class="register-title">Hoàn tất tài khoản</h2>
        <p class="register-subtitle">Vui lòng xác nhận vai trò của bạn trên hệ thống</p>

        <form id="registerForm">
            <div id="formError" class="text-danger mb-3" style="font-size: 0.875rem;"></div>

            <div class="mb-3">
                <label for="Email" class="form-label">Email Google</label>
                <input id="Email" type="text" class="form-control" readonly />
            </div>

            <div class="mb-4">
                <label for="RoleId" class="form-label">Bạn là:</label>
                <select id="RoleId" class="form-select" required>
                    <option value="" disabled selected>-- Chọn vai trò --</option>
                    <option value="1">Giáo viên</option>
                    <option value="2">Học sinh</option>
                </select>
                <!-- Note: The Role ID values 1 and 2 correspond to the IDs in the DB -->
            </div>

            <button type="submit" class="btn btn-register">Hoàn tất đăng ký</button>
        </form>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js"></script>
    <script src="~/js/Auth/register.js"></script>
</body>
</html>
