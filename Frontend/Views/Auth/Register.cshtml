@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Đăng ký - Math Test Creator</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/Auth/register.css" asp-append-version="true" />
</head>
<body>
    <div class="register-container">
        <h2 class="register-title">Tạo Tài Khoản</h2>
        <p class="register-subtitle" id="roleDisplay">Đang tải vai trò...</p>

        <form id="registerForm">
            <div id="formError" class="text-danger mb-3" style="font-size: 0.875rem; display: none;"></div>

            <div class="mb-3">
                <label for="Username" class="form-label">Tên đăng nhập</label>
                <input id="Username" type="text" class="form-control" placeholder="dangan99" required />
            </div>

            <div class="mb-3">
                <label for="Email" class="form-label">Địa chỉ Email</label>
                <input id="Email" type="email" class="form-control" placeholder="email@example.com" required />
            </div>

            <div class="mb-3">
                <label for="Password" class="form-label">Mật khẩu</label>
                <input id="Password" type="password" class="form-control" placeholder="••••••••" required />
            </div>

            <div class="mb-3">
                <label for="ConfirmPassword" class="form-label">Nhập lại mật khẩu</label>
                <input id="ConfirmPassword" type="password" class="form-control" placeholder="••••••••" required />
            </div>

            <button type="submit" class="btn btn-register">Tiếp tục (Nhận mã OTP)</button>
        </form>

        <div class="divider-container">HOẶC</div>

        <!-- Google Login API container -->
        <div id="g_id_onload"
             data-client_id="@ViewData["GoogleClientId"]"
             data-context="signup"
             data-ux_mode="popup"
             data-callback="handleCredentialResponse"
             data-auto_prompt="false">
        </div>

        <!-- Custom Styled Google Button -->
        <button type="button" class="btn btn-google" onclick="triggerGoogleRegister()">
            <svg version="1.1" xmlns="http://www.w3.org/2000/svg" width="18px" height="18px" viewBox="0 0 48 48"><g><path fill="#EA4335" d="M24 9.5c3.54 0 6.71 1.22 9.21 3.6l6.85-6.85C35.9 2.38 30.47 0 24 0 14.62 0 6.51 5.38 2.56 13.22l7.98 6.19C12.43 13.72 17.74 9.5 24 9.5z"></path><path fill="#4285F4" d="M46.98 24.55c0-1.57-.15-3.09-.38-4.55H24v9.02h12.94c-.58 2.96-2.26 5.48-4.78 7.18l7.73 6c4.51-4.18 7.09-10.36 7.09-17.65z"></path><path fill="#FBBC05" d="M10.53 28.59c-.48-1.45-.76-2.99-.76-4.59s.27-3.14.76-4.59l-7.98-6.19C.92 16.46 0 20.12 0 24c0 3.88.92 7.54 2.56 10.78l7.97-6.19z"></path><path fill="#34A853" d="M24 48c6.48 0 11.93-2.13 15.89-5.81l-7.73-6c-2.15 1.45-4.92 2.3-8.16 2.3-6.26 0-11.57-4.22-13.47-9.91l-7.98 6.19C6.51 42.62 14.62 48 24 48z"></path><path fill="none" d="M0 0h48v48H0z"></path></g></svg>
            Đăng ký nhanh bằng Google
        </button>
        
        <!-- Invisible native button needed by Google Identity Services API -->
        <div class="g_id_signin" data-type="standard" style="display:none;" id="googleSignInWrapper"></div>

        <div class="back-link">
            Đã có tài khoản? <a href="/Auth/Login">Đăng nhập</a>
            <br/><br/>
            <a href="/Auth/SelectRole" style="color: #a0aec0;">← Đổi vai trò</a>
        </div>
        
        <div id="loadingOverlay">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            <p class="mt-2 text-muted">Đang gửi mã OTP đến Email của bạn...</p>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js"></script>
    <!-- Google Identity Services JS -->
    <script src="https://accounts.google.com/gsi/client" async defer></script>
    <script src="~/js/Auth/register-otp.js"></script>
</body>
</html>
