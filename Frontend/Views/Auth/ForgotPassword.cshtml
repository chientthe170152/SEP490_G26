@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Quên mật khẩu - Math Test Creator</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/Auth/login.css" asp-append-version="true" />
</head>
<body>
    <div class="login-container">
        <h2 class="login-title">Quên Mật Khẩu</h2>
        <p class="login-subtitle">Nhập email của bạn để nhận mã đặt lại mật khẩu</p>

        <form id="forgotPasswordForm">
            <div id="formMessage" class="mb-3 fw-bold" style="font-size: 0.9rem;"></div>

            <div class="mb-3">
                <label for="Email" class="form-label">Email</label>
                <input id="Email" type="email" class="form-control" placeholder="Email của bạn" required />
            </div>

            <button type="submit" class="btn btn-login" id="btnSubmit">Gửi Mã OTP</button>
            <div class="text-center mt-3">
                <a href="/Auth/Login" class="forgot-password" style="text-decoration: underline;">Quay lại Đăng nhập</a>
            </div>
        </form>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/Auth/forgotPassword.js" asp-append-version="true"></script>
</body>
</html>
