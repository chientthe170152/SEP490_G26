@{
    Layout = null;
    var email = ViewData["Email"] as string ?? "";
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Đặt lại mật khẩu - Math Test Creator</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/Auth/login.css" asp-append-version="true" />
</head>
<body>
    <div class="login-container">
        <h2 class="login-title">Đặt lại Mật Khẩu</h2>
        <p class="login-subtitle">Nhập mã OTP đã gửi đến hộp thư của bạn</p>

        <form id="resetPasswordForm">
            <div id="formMessage" class="mb-3 fw-bold" style="font-size: 0.9rem;"></div>

            <div class="mb-3">
                <label for="Email" class="form-label">Email</label>
                <input id="Email" type="email" class="form-control" value="@email" readonly />
            </div>

            <div class="mb-3">
                <label for="OtpCode" class="form-label">Mã OTP</label>
                <input id="OtpCode" type="text" class="form-control" placeholder="Nhập mã 6 số" required />
            </div>

            <div class="mb-3">
                <label for="NewPassword" class="form-label">Mật khẩu mới</label>
                <input id="NewPassword" type="password" class="form-control" placeholder="Tối thiểu 6 ký tự" required minlength="6"/>
            </div>

            <button type="submit" class="btn btn-login" id="btnSubmit">Xác nhận Đặt lại</button>
            <div class="text-center mt-3">
                <a href="/Auth/Login" class="forgot-password" style="text-decoration: underline;">Quay lại Đăng nhập</a>
            </div>
        </form>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/Auth/resetPassword.js" asp-append-version="true"></script>
</body>
</html>
