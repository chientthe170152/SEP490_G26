@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Xác minh OTP - Math Test Creator</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/Auth/verify-otp.css" asp-append-version="true" />
</head>
<body>
    <div class="otp-container">
        <h2 class="otp-title">Xác thực Email</h2>
        <p class="otp-subtitle">
            Chúng tôi vừa gửi một mã số gồm 6 chữ số đến email<br/>
            <strong id="displayEmail">...</strong>
        </p>

        <div id="formError" class="text-danger mb-3" style="font-size: 0.875rem; display: none;"></div>
        <div id="formSuccess" class="text-success mb-3" style="font-size: 0.875rem; display: none;"></div>

        <div class="otp-inputs" id="otpInputs">
            <input type="text" class="otp-input" maxlength="1" autocomplete="off" />
            <input type="text" class="otp-input" maxlength="1" autocomplete="off" />
            <input type="text" class="otp-input" maxlength="1" autocomplete="off" />
            <input type="text" class="otp-input" maxlength="1" autocomplete="off" />
            <input type="text" class="otp-input" maxlength="1" autocomplete="off" />
            <input type="text" class="otp-input" maxlength="1" autocomplete="off" />
        </div>

        <button type="button" class="btn btn-verify" id="btnVerify" onclick="verifyOtp()">Xác nhận tài khoản</button>

        <div class="resend-text">
            Chưa nhận được mã? <span class="resend-link disabled" id="resendLink" onclick="resendOtp()">Gửi lại mã (<span id="timer">60</span>s)</span>
        </div>
        
        <div style="margin-top: 20px;">
            <a href="/Auth/Register" style="color: #718096; text-decoration: none; font-size: 0.875rem;">← Đổi Email khác</a>
        </div>
        
        <div id="loadingOverlay">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            <p class="mt-2 text-muted" id="loadingText">Đang xác thực...</p>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js"></script>
    <script src="~/js/Auth/verify-otp.js"></script>
</body>
</html>
