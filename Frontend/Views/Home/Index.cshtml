@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>

    <!-- Test form for exam taking with POST -->
    <div class="card mx-auto mt-4" style="max-width: 400px; padding: 20px;">
        <h3>Vào thi (Test POST Link)</h3>
        <p class="text-muted">Nhập mã đề và ID bài thi để test thử URL bị ẩn tham số.</p>
        <form method="post" action="/StudentExam/TakeExam">
            <div class="mb-3 text-start">
                <label class="form-label">Exam ID</label>
                <input type="number" name="examId" class="form-control" value="1" required />
            </div>
            <div class="mb-3 text-start">
                <label class="form-label">Paper ID</label>
                <input type="number" name="paperId" class="form-control" value="1" required />
            </div>
            <div class="d-flex flex-column gap-2">
                <button type="submit" class="btn btn-primary w-100">Làm bài (POST)</button>

                <a asp-controller="StudentExam"
                   asp-action="ExamPreview"
                   asp-route-examId="1"
                   class="btn btn-outline-info w-100">
                    Xem thông tin đề (GET)
                </a>
            </div>
        </form>
    </div>
</div>

